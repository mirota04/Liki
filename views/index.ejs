<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/images/Picture2.png">
    <title>Liki</title>

    <!-- External CSS -->
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.6.0/fonts/remixicon.css" rel="stylesheet">
    
    <!-- Tailwind Config -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#5F8396',
                        secondary: '#2F4A61',
                        neutral: '#BCB9AC',
                        warm: '#6F6558',
                        dark: '#242527',
                        'neutral-light': '#BCB9AC20'
                    },
                    borderRadius: {
                        'none': '0px',
                        'sm': '4px',
                        DEFAULT: '8px',
                        'md': '12px',
                        'lg': '16px',
                        'xl': '20px',
                        '2xl': '24px',
                        '3xl': '32px',
                        'full': '9999px',
                        'button': '8px'
                    },
                    fontFamily: {
                        'inter': ['Inter', 'sans-serif']
                    }
                }
            }
        }
    </script>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body class="bg-gray-50 font-inter">

    <!-- Header -->
    <header class="bg-white/95 backdrop-blur-sm border-b border-neutral/20 sticky top-0 z-50">
        <div class="w-full px-4 sm:px-6 py-3 sm:py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-12">
                    <img onclick="navigateToPage('home')" src="/images/Picture2.png" alt="logo" style="height: 35px;">
                    <nav class="hidden md:flex items-center space-x-8">
                        <a href="#" onclick="navigateToPage('home')" class="text-primary hover:custom-text-primary transition-colors font-medium">Home</a>
                        <a href="#" onclick="navigateToPage('grammar')" class="text-dark hover:custom-text-primary transition-colors font-medium">Grammar</a>
                        <a href="#" onclick="navigateToPage('vocabulary')" class="text-dark hover:custom-text-primary transition-colors font-medium">Vocabulary</a>
                        <a href="#" onclick="navigateToPage('profile')" class="text-dark hover:custom-text-primary transition-colors font-medium">Profile</a>
                    </nav>
                </div>
                <div class="flex items-center space-x-4">
                    <button class="w-10 h-10 flex items-center justify-center text-warm hover:custom-text-primary transition-colors">
                        <i class="ri-notification-3-line ri-lg"></i>
                    </button>
                    <div class="relative">
                        <button id="profileDropdownBtn" class="w-10 h-10 flex items-center justify-center custom-bg-primary custom-text-white rounded-full hover:bg-secondary transition-colors">
                            <i class="ri-user-3-line"></i>
                        </button>
                        <div id="profileDropdown" class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-100 py-2 hidden z-50">
                            <a href="#" onclick="navigateToPage('profile')" class="flex items-center px-4 py-2 text-sm text-dark hover:bg-gray-50 transition-colors">
                                <i class="ri-user-3-line mr-3 text-primary"></i>
                                Profile
                            </a>
                            <a href="#" class="flex items-center px-4 py-2 text-sm text-dark hover:bg-gray-50 transition-colors">
                                <i class="ri-settings-3-line mr-3 text-warm"></i>
                                Settings
                            </a>
                            <div class="border-t border-gray-100 my-1"></div>
                            <div class="flex items-center justify-between px-4 py-2">
                                <div class="flex items-center">
                                    <i class="ri-moon-line mr-3 text-warm"></i>
                                    <span class="text-sm text-dark">Dark Mode</span>
                                </div>
                                <button id="darkModeToggle" class="relative inline-flex h-6 w-11 items-center rounded-full bg-gray-200 transition-colors focus:outline-none focus:ring-2 focus:ring-primary/20 focus:ring-offset-2">
                                    <span id="darkModeThumb" class="inline-block h-4 w-4 transform rounded-full bg-white transition-transform translate-x-1"></span>
                                </button>
                            </div>
                            <div class="border-t border-gray-100 my-1"></div>
                            <a href="#" onclick="logout()" class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors">
                                <i class="ri-logout-box-r-line mr-3"></i>
                                Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    
    <!-- Main Content -->
    <main class="min-h-screen pb-20 md:pb-0">
        <!-- Hero Section -->
        <section class="hero-bg py-10 sm:py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6">
                <div class="grid md:grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
                    <div class="space-y-8">
                        <div class="space-y-4">
                            <h1 class="text-3xl sm:text-5xl font-bold text-dark leading-tight">
                                Welcome back, <span class="custom-text-primary"><%= typeof username !== 'undefined' ? username : 'User' %></span>
                            </h1>
                            <p class="text-base sm:text-xl text-warm leading-relaxed">
                                Continue your Korean language journey with today's personalized lessons and challenges.
                            </p>
                        </div>
                        <div class="flex items-center space-x-3">
                            <button class="btn-primary custom-text-white px-6 sm:px-8 py-3 sm:py-4 !rounded-button font-semibold whitespace-nowrap text-sm sm:text-base">
                                Continue Learning
                            </button>
                            <div class="flex items-center space-x-3">
                                <div class="w-3 h-3 custom-bg-primary rounded-full"></div>
                                <span id="streakBadgeText" class="text-secondary font-medium text-sm sm:text-base">0 day streak</span>
                            </div>
                        </div>
                    </div>
                    <div class="flex justify-center">
                        <div class="relative">
                            <svg class="w-48 h-48 progress-ring" viewBox="0 0 100 100">
                                <circle cx="50" cy="50" r="40" stroke="#E5E7EB" stroke-width="8" fill="none"></circle>
                                <circle cx="50" cy="50" r="40" stroke="url(#progressGradient)" stroke-width="8" fill="none" class="progress-ring-circle"></circle>
                                <defs>
                                    <linearGradient id="progressGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                                        <stop offset="0%" style="stop-color:#5F8396"></stop>
                                        <stop offset="100%" style="stop-color:#2F4A61"></stop>
                                    </linearGradient>
                                </defs>
                            </svg>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <div class="text-center">
                                    <div id="todayProgressPct" class="text-3xl font-bold text-secondary">0%</div>
                                    <div class="text-sm text-warm">Today's Goal</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Main Content Section -->
        <section class="py-10 sm:py-16">
            <div class="max-w-7xl mx-auto px-4 sm:px-6">
                <div class="grid lg:grid-cols-3 gap-6 sm:gap-8">
                    <!-- Left Column -->
                    <div class="lg:col-span-2 space-y-8">
                        <!-- Daily Quiz Challenge -->
                        <div class="bg-white/50 backdrop-blur-sm rounded-2xl p-6 sm:p-8 shadow-sm border border-neutral/20 card-hover">
                            <div class="flex items-center justify-between mb-6">
                                <h2 class="text-2xl font-bold text-dark">Daily Quiz Challenge</h2>
                                <div class="flex items-center space-x-2 custom-text-primary">
                                    <i class="ri-fire-line ri-lg"></i>
                                    <span class="font-semibold">+50 XP</span>
                                </div>
                            </div>
                            <div class="space-y-6">
                                <div class="flex items-center justify-between">
                                    <span class="text-warm text-sm sm:text-base">Progress: 3/5 questions</span>
                                    <span class="text-secondary font-semibold text-sm sm:text-base">60% Complete</span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2.5 sm:h-3">
                                    <div class="progress-bar h-2.5 sm:h-3 rounded-full" style="width: 60%"></div>
                                </div>
                                <div class="flex flex-wrap items-center justify-between gap-3 pt-4">
                                    <div class="flex items-center space-x-4 sm:space-x-6">
                                        <div class="text-center">
                                            <div class="text-2xl font-bold text-secondary">1,247</div>
                                            <div class="text-sm text-warm">Total Points</div>
                                        </div>
                                        <div class="text-center">
                                            <div id="streakCount" class="text-2xl font-bold text-secondary">0</div>
                                            <div class="text-sm text-warm">Day Streak</div>
                                        </div>
                                        <div class="text-center">
                                            <div id="achievementsCount" class="text-2xl font-bold text-secondary">0</div>
                                            <div class="text-sm text-warm">Achievements</div>
                                        </div>
                                    </div>
                                    <button class="btn-primary custom-text-white px-5 sm:px-6 py-2.5 sm:py-3 !rounded-button font-semibold whitespace-nowrap text-sm sm:text-base self-start">
                                        Continue Quiz
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Stats Grid -->
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 sm:gap-6">
                            <div class="stat-card rounded-xl p-6 shadow-sm card-hover">
                                <div class="flex items-center space-x-4 mb-4">
                                    <div class="w-12 h-12 flex items-center justify-center bg-primary/10 rounded-xl">
                                        <i class="ri-book-open-line ri-2x custom-text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="text-2xl font-bold text-dark">156</div>
                                        <div class="text-sm text-warm">Words Learned</div>
                                    </div>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2">
                                    <div class="progress-bar h-2 rounded-full" style="width: 78%"></div>
                                </div>
                                <div class="text-xs text-warm mt-2">+12 this week</div>
                            </div>
                            <div class="stat-card rounded-xl p-6 shadow-sm card-hover">
                                <div class="flex items-center space-x-4 mb-4">
                                    <div class="w-12 h-12 flex items-center justify-center bg-secondary/10 rounded-xl">
                                        <i class="ri-chat-3-line ri-2x text-secondary"></i>
                                    </div>
                                    <div>
                                        <div class="text-2xl font-bold text-dark">23</div>
                                        <div class="text-sm text-warm">Grammar Rules</div>
                                    </div>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2">
                                    <div class="progress-bar h-2 rounded-full" style="width: 65%"></div>
                                </div>
                                <div class="text-xs text-warm mt-2">+3 this week</div>
                            </div>
                            <div class="stat-card rounded-xl p-6 shadow-sm card-hover">
                                <div class="flex items-center space-x-4 mb-4">
                                    <div class="w-12 h-12 flex items-center justify-center bg-primary/10 rounded-xl">
                                        <i class="ri-time-line ri-2x custom-text-primary"></i>
                                    </div>
                                    <div>
                                        <div id="hoursStudiedValue" class="text-2xl font-bold text-dark">0</div>
                                        <div class="text-sm text-warm">Hours Studied</div>
                                    </div>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2">
                                    <div id="hoursStudiedBar" class="progress-bar h-2 rounded-full" style="width: 0%"></div>
                                </div>
                                <div id="hoursStudiedDelta" class="text-xs text-warm mt-2">+0 this week</div>
                            </div>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="space-y-8">
                        <!-- Today's Focus -->
                        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-100">
                            <h3 class="text-lg font-semibold text-dark mb-4">Today's Focus</h3>
                            <div class="space-y-4">
                                <div class="flex items-center space-x-3 p-3 bg-primary/5 rounded-lg">
                                                                    <div class="w-8 h-8 flex items-center justify-center custom-bg-primary custom-text-white rounded-full">
                                    <i class="ri-check-line"></i>
                                </div>
                                    <div>
                                        <div class="font-medium text-dark">Verb Conjugation</div>
                                        <div class="text-sm text-warm">Present tense forms</div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                                    <div class="w-8 h-8 flex items-center justify-center bg-gray-300 text-white rounded-full">
                                        <i class="ri-play-line"></i>
                                    </div>
                                    <div>
                                        <div class="font-medium text-dark">Pronunciation</div>
                                        <div class="text-sm text-warm">Double consonants</div>
                                    </div>
                                </div>
                                <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
                                    <div class="w-8 h-8 flex items-center justify-center bg-gray-300 text-white rounded-full">
                                        <i class="ri-play-line"></i>
                                    </div>
                                    <div>
                                        <div class="font-medium text-dark">Listening Practice</div>
                                        <div class="text-sm text-warm">Daily conversations</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Achievements -->
                        <div class="achievement-card rounded-xl p-6 shadow-sm">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-lg font-semibold text-dark">Achievements</h3>
                                <button id="openAllAchievements" class="text-sm font-medium custom-text-primary hover:text-secondary">View All</button>
                            </div>
                            <div class="space-y-3">
                                <% (achievementsRecent || []).forEach(function(a){ %>
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 flex items-center justify-center rounded-full <%= a.status ? 'bg-green-100' : 'bg-gray-100' %>">
                                        <i class="<%= a.icon %> <%= a.status ? 'text-green-600' : 'text-gray-500' %>"></i>
                                    </div>
                                    <div>
                                        <div class="font-medium text-dark"><%= a.title %></div>
                                        <div class="text-sm text-warm"><%= a.description %></div>
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Quick Access Section -->
        <section class="py-10 sm:py-16 bg-white">
            <div class="max-w-7xl mx-auto px-4 sm:px-6">
                <div class="flex items-center justify-between mb-8">
                    <h2 class="text-2xl sm:text-3xl font-bold text-dark">Quick Access</h2>
                    <button class="custom-text-primary hover:text-secondary transition-colors font-medium text-sm sm:text-base">View All</button>
                </div>
                <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <div class="bg-gradient-to-br from-neutral/5 to-warm/10 rounded-xl p-6 card-hover cursor-pointer border border-neutral/20">
                        <div class="w-12 h-12 flex items-center justify-center custom-bg-primary custom-text-white rounded-xl mb-4">
                            <i class="ri-book-2-line ri-2x"></i>
                        </div>
                        <h3 class="font-semibold text-dark mb-2">Recent Lessons</h3>
                        <p class="text-sm text-warm mb-4">Continue where you left off</p>
                        <div class="text-xs custom-text-primary font-medium">3 lessons pending</div>
                    </div>
                    <div class="bg-gradient-to-br from-primary/5 to-secondary/10 rounded-xl p-6 card-hover cursor-pointer border border-primary/20">
                        <div class="w-12 h-12 flex items-center justify-center bg-secondary text-white rounded-xl mb-4">
                            <i class="ri-bookmark-line ri-2x"></i>
                        </div>
                        <h3 class="font-semibold text-dark mb-2">Bookmarks</h3>
                        <p class="text-sm text-warm mb-4">Your saved content</p>
                        <div class="text-xs text-secondary font-medium">12 items saved</div>
                    </div>
                    <div class="bg-gradient-to-br from-neutral/5 to-warm/10 rounded-xl p-6 card-hover cursor-pointer border border-neutral/20">
                        <div class="w-12 h-12 flex items-center justify-center custom-bg-primary custom-text-white rounded-xl mb-4">
                            <i class="ri-lightbulb-line ri-2x"></i>
                        </div>
                        <h3 class="font-semibold text-dark mb-2">Recommendations</h3>
                        <p class="text-sm text-warm mb-4">Personalized for you</p>
                        <div class="text-xs custom-text-primary font-medium">5 new suggestions</div>
                    </div>
                    <div class="bg-gradient-to-br from-primary/5 to-secondary/10 rounded-xl p-6 card-hover cursor-pointer border border-primary/20">
                        <div class="w-12 h-12 flex items-center justify-center bg-secondary text-white rounded-xl mb-4">
                            <i class="ri-group-line ri-xl"></i>
                        </div>
                        <h3 class="font-semibold text-dark mb-2">Study Groups</h3>
                        <p class="text-sm text-warm mb-4">Learn with others</p>
                        <div class="text-xs text-secondary font-medium">2 active groups</div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <!-- All Achievements Modal -->
    <div id="achievementsModal" class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 hidden backdrop-blur-sm">
        <div class="bg-white rounded-2xl w-full max-w-2xl mx-4 p-4 sm:p-6 md:p-8 max-h-[80vh] sm:max-h-[85vh] md:max-h-[90vh] overflow-hidden flex flex-col">
            <div class="flex items-center justify-between mb-4 sm:mb-6 flex-shrink-0">
                <h2 class="text-xl sm:text-2xl font-bold text-dark">All Achievements</h2>
                <button id="closeAchievementsModal" class="w-8 h-8 flex items-center justify-center hover:bg-gray-100 rounded-full transition-colors">
                    <i class="ri-close-line text-gray-500"></i>
                </button>
            </div>
            <div class="flex-1 overflow-y-auto min-h-0 space-y-3 pr-1">
                <% (achievementsAll || []).forEach(function(a){ %>
                <div class="flex items-start space-x-3 p-3 rounded-lg border border-gray-100">
                    <div class="w-10 h-10 flex items-center justify-center rounded-full <%= a.status ? 'bg-green-100' : 'bg-gray-100' %>">
                        <i class="<%= a.icon %> <%= a.status ? 'text-green-600' : 'text-gray-500' %>"></i>
                    </div>
                    <div class="flex-1">
                        <div class="font-semibold text-dark"><%= a.title %></div>
                        <div class="text-sm text-warm"><%= a.description %></div>
                    </div>
                    <div>
                        <span class="text-xs <%= a.status ? 'text-green-600' : 'text-gray-400' %>"><%= a.status ? 'Unlocked' : 'Locked' %></span>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>

    <!-- Footer -->


    <!-- Custom JavaScript -->
    <script src="/scripts/main.js"></script>

    <!-- Mobile bottom nav for small screens -->
    <nav class="fixed bottom-0 inset-x-0 bg-white border-t border-neutral/20 md:hidden z-50">
        <div class="flex justify-around py-2">
            <button onclick="navigateToPage('home')" class="flex flex-col items-center text-primary">
                <i class="ri-home-4-line"></i>
                <span class="text-xs">Home</span>
            </button>
            <button onclick="navigateToPage('grammar')" class="flex flex-col items-center text-dark">
                <i class="ri-chat-3-line"></i>
                <span class="text-xs">Grammar</span>
            </button>
            <button onclick="navigateToPage('vocabulary')" class="flex flex-col items-center text-dark">
                <i class="ri-book-2-line"></i>
                <span class="text-xs">Vocab</span>
            </button>
            <button onclick="navigateToPage('profile')" class="flex flex-col items-center text-dark">
                <i class="ri-user-3-line"></i>
                <span class="text-xs">Profile</span>
            </button>
        </div>
    </nav>
</body>
</html>