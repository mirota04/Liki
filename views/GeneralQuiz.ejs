          </nav>
        </div>
        <div class="flex items-center space-x-4">
          <a href="#" onclick="navigateToPage('home')" class="text-sm text-warm hover:underline">Back</a>
        </div>
      </div>
    </div>
  </header>

  <main>
    <!-- Content will be populated by JavaScript based on mode -->
  </main>

  <script>
    // Navigation function
    function navigateToPage(page) {
      switch(page) {
        case 'home':
          window.location.href = '/home';
          break;
        case 'grammar':
          window.location.href = '/grammar';
          break;
        case 'vocabulary':
          window.location.href = '/vocabulary';
          break;
        case 'profile':
          window.location.href = '/profile';
          break;
      }
    }
  </script>
  <script src="/scripts/generalQuiz.js"></script>
</body>
</html>
